{
 "compilerOptions": {
   "module": "ES2020",
   "declaration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "moduleResolution": "node",
   "esModuleInterop": true,
   "noLib": false,
   "target": "es6",
   "sourceMap": true,
   "lib": [
     "es2020", "DOM"
   ],
   "allowSyntheticDefaultImports": true,
   "typeRoots": [
    "./types",
    "./node_modules/vue/types"
  ],
 },
 "include": [
   "src/**/*"
 ],
 "exclude": [
   "node_modules"
 ],
}

